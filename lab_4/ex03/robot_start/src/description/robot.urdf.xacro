<?xml version="1.0"?>
<robot name="my_robot" xmlns:xacro="http://www.ros.org/wiki/xacro">

  <xacro:arg name="sim" default="false" />

  <!-- Materials -->
  <material name="blue">
    <color rgba="0.0 0.0 0.8 1.0"/>
  </material>

  <material name="black">
    <color rgba="0.0 0.0 0.0 1.0"/>
  </material>

  <material name="gray">
    <color rgba="0.7 0.7 0.7 1.0"/>
  </material>

  <xacro:property name="base_radius" value="0.105" />
  <xacro:property name="base_length" value="0.25" />
  <xacro:property name="base_mass" value="0.3" />
  <xacro:property name="wheel_radius" value="0.02" />
  <xacro:property name="wheel_length" value="0.01" />
  <xacro:property name="wheel_mass" value="0.01" />
  <xacro:property name="caster_radius" value="0.02" />
  <xacro:property name="caster_mass" value="0.01" />
  <xacro:property name="base_z_offset" value="0.02" />

  <link name="base_link">
    <visual>
      <origin xyz="0 0 ${base_z_offset}" rpy="0 0 0"/>
      <geometry>
        <mesh filename="package://robot_start/meshes/body.stl"/>
      </geometry>
      <material name="blue"/>
    </visual>
    <collision>
      <origin xyz="0 0 ${base_z_offset}" rpy="1.5708 0 0"/>
      <geometry>
        <cylinder length="${base_length}" radius="${base_radius}"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="${base_mass}"/>
      <inertia ixx="10.0" ixy="0.0" ixz="0.0" iyy="10.0" iyz="0.0" izz="10.0"/>
    </inertial>
  </link>

  <xacro:macro name="wheel" params="prefix reflect turn_angle">
    <link name="${prefix}_wheel">
      <visual>
        <geometry>
          <mesh filename="package://robot_start/meshes/wheel.stl"/>
        </geometry>
        <material name="black"/>
      </visual>
      <collision>
        <origin xyz="0.0 0.0 0.0" rpy="${reflect * -1.57} 0 0"/>
        <geometry>
          <cylinder length="${wheel_length}" radius="${wheel_radius}"/>
        </geometry>
      </collision>
      <inertial>
        <mass value="${wheel_mass}"/>
        <inertia ixx="0.1" ixy="0.0" ixz="0.0" iyy="0.1" iyz="0.0" izz="0.1"/>
      </inertial>
    </link>

    <joint name="${prefix}_wheel_joint" type="continuous">
      <parent link="base_link"/>
      <child link="${prefix}_wheel"/>
      <origin xyz="-0.02 ${reflect * 0.06} ${base_z_offset}" rpy="${turn_angle} 0 0"/>
      <axis xyz="0 ${reflect} 0"/>
      <dynamics damping="0.1" friction="0.0"/>
    </joint>
  </xacro:macro>

  <xacro:wheel prefix="left" reflect="1" turn_angle="0"/>
  <xacro:wheel prefix="right" reflect="-1" turn_angle="3.1415"/>

  <link name="front_caster">
    <visual>
      <geometry>
        <mesh filename="package://robot_start/meshes/ball.stl"/>
      </geometry>
      <material name="gray"/>
    </visual>
    <collision>
      <origin xyz="0.0 0.0 0.0" rpy="0 0 0"/>
      <geometry>
        <sphere radius="${caster_radius}"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="${caster_mass}"/>
      <inertia ixx="0.01" ixy="0.0" ixz="0.0" iyy="0.01" iyz="0.0" izz="0.01"/>
    </inertial>
  </link>

  <joint name="front_caster_joint" type="fixed">
    <parent link="base_link"/>
    <child link="front_caster"/>
    <origin xyz="0.03 0.0 ${base_z_offset}" rpy="0 0 0"/>
  </joint>

  <xacro:if value="$(arg sim)">
    <xacro:include filename="$(find robot_start)/robot.gazebo.xacro" />
  </xacro:if>

</robot>